\usepackage{acro}  %% https://ctan.org/pkg/acro, https://github.com/cgnieder/acro

%% acronym definitions are supposed to be in 'acronyms.tex':
\IfFileExists{acronyms.tex}%
	{\input{acronyms}}%
	{\PackageWarning{hgbacro}{File 'acronyms.tex' not found}}


%% Output template (copied from 'acro.definitions.code.tex')
\NewAcroTemplate[list]{descriptionX}{%
\acroheading
\acropreamble
\begin{description}
	\acronymsmapF{%
		\item[\acrowrite{short}\acroifT{alt}{/\acrowrite{alt}}]%
			\acrowrite{list}%
			\acroifanyT{foreign,extra}{ (}%
			\acroifT{foreign}{\acrowrite{foreign}\acroifT{extra}{, }}%
			\acroifT{extra}{\acrowrite{extra}}%
			\acroifanyT{foreign,extra}{)}%
			%\acropagefill
			\dotfill				% CHANGED to use regular \dotfill instead of (too wide) \acropagefill
			\acropages
				{\acrotranslate{page}\nobreakspace}
				{\acrotranslate{pages}\nobreakspace}%
		}
		{\item\AcroRerun}
\end{description}
}
		
\acsetup{
	first-style=long-short,			% long-short|short-long|short|long|footnote
	subsequent-style=short,			% long-short|short-long|short|long|footnote
	single=false,								% set to "true" if an acronym that has only been used once should not be part of the list of acronyms
	make-links=true,						% set to "true" to link acronyms with their entry in the list of acronyms
	list/display=used,					% set to "all" to print all defined acronyms, no matter if they are referenced or not
	list/template=descriptionX,	% output list of acronyms in 'descriptionX' style (defined above)
	list/heading=chapter,				% use chapter as heading
	pages/display=all,					% show all pages where acronym was used
}

%% Provide a wrapper command as a precaution for later changes:
\newcommand{\PrintAcronyms}[0]{%
	\printacronyms
}
