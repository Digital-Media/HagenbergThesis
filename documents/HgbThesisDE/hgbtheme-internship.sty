\usepackage{hgbtheme-thesis}	% parent theme, most definitions are inherited from here

%% This is a 'theme' file which specifies the layout and arrangement of the
%% document's front pages.

\renewcommand{\hgbThesisNameDE}{Praktikumsbericht}
\renewcommand{\hgbThesisNameEN}{Internship Report}

% Specific Internship Report Parameters (to be specified by author in main document):

\newcommand{\@companyName}{\@MissingArg{Company not specified!}}
\newcommand{\companyName}[1]{%
	\ifthenelse{\isempty{#1}}{}{\renewcommand{\@companyName}{#1}}
}

\newcommand{\@companyUrl}{\@MissingArg{Company URL not specified!}}
\newcommand{\companyUrl}[1]{%
	\ifthenelse{\isempty{#1}}{}{\renewcommand{\@companyUrl}{#1}}
}

%% Modified arrangement of front pages:

\renewcommand{\hgb@makefrontpages}{
	\@maketitlepage%    as defined by 'hgbtheme-thesis' 
	\@companypage%      defined below
	\@copyrightpage%    defined by 'hgbtheme-thesis'
	\@declarationpage%s defined by 'hgbtheme-thesis'
}

%% Company Page for Internship Report -----------------------------------------

\newcommand{\@companypage}{%
\newpage
%\setcounter{page}{2}
\thispagestyle{plain}
\rule{0mm}{1mm}
\begin{center}
  \vspace{25mm} 
  {Praktikumsstelle:}%
  \\[5mm]
  {\Large\sffamily\@companyName}%
  \\[3mm]
  {\sffamily\@companyUrl}%
  \\[45mm]
  {Kontaktperson:}%
  \\[5mm]
  {\Large\sffamily\@advisor}
\end{center}
}
