\usepackage{hgbtheme-legacy}	% parent theme, most definitions are inherited from here

%% This 'theme' file defines the front pages of Internship Reports.
%% Note: This is a legacy theme and should not be used for new document!

\renewcommand{\hgb@ThesisNameDE}{Praktikumsbericht}
\renewcommand{\hgb@ThesisNameEN}{Internship Report}

% Specific Internship Report Parameters (to be specified by author in main document):

\newcommand{\@companyName}{\@MissingArg{Company not specified!}}
\newcommand{\companyName}[1]{%
	\ifthenelse{\isempty{#1}}{}{\renewcommand{\@companyName}{#1}}
}

\newcommand{\@companyUrl}{\@MissingArg{Company URL not specified!}}
\newcommand{\companyUrl}[1]{%
	\ifthenelse{\isempty{#1}}{}{\renewcommand{\@companyUrl}{#1}}
}

%% Modified arrangement of front pages:

\renewcommand{\hgb@MakeFrontPages}{
	\hgb@MakeTitlePage%    as defined by 'hgbtheme-thesis' 
	\@companypage%      defined below
	\hgb@MakeCopyrightPage%    defined by 'hgbtheme-thesis'
	\hgb@MakeDeclarationPage%s defined by 'hgbtheme-thesis'
}

%% Company Page for Internship Report -----------------------------------------

\newcommand{\@companypage}{%
\newpage
%\setcounter{page}{2}
\thispagestyle{plain}
\rule{0mm}{1mm}
\begin{center}
  \vspace{25mm} 
  {Praktikumsstelle:}%
  \\[5mm]
  {\Large\sffamily\@companyName}%
  \\[3mm]
  {\sffamily\@companyUrl}%
  \\[45mm]
  {Kontaktperson:}%
  \\[5mm]
  {\Large\sffamily\hgb@Advisor}
\end{center}
}
