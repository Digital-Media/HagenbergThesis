%% Structure of front pages ---------------------------------------------------
  
\renewcommand{\hgb@MakeFrontPages}{  %% stub defined in hgbthesis.cls
  \hgb@MakeTitlePage%
	\ifthenelse{\equal{\hgb@ThesisType}{internship}}%
		{\hgb@MakeCompanyPage}%
		{\hgb@MakeAdvisorPage}% 
