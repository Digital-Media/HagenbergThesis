%% Title page ---------------------------------------------------

\newcommand{\hgb@MakeTitlePage}{%
\begin{titlepage}%
	\begin{german}
		\rule{0mm}{1mm}%
		\vspace*{0mm}%
		\begin{center}%
			\hgb@TitlePageFont%
			\setlength{\unitlength}{1cm}%
			\parbox[c][5cm][c]{\textwidth}{%
				\centering%\LARGE\bfseries\linespread{1.0}\selectfont%
				\begin{SwitchLanguage}{\hgb@MainLanguage}% thesis title is assumed to be in main document language!
					{\LARGE\bfseries\linespread{1.0}\selectfont\hgb@Title\par}%
					\par\vskip 4mm%
					{\Large\bfseries\linespread{1.0}\selectfont\hgb@SubTitle\par}%
				\end{SwitchLanguage}%
			}
			\vskip 15mm%
			{\large\hgb@Author}%
			\vskip 15mm%
			\hgb@MakeLogo%
			\vskip 15mm%
			% ---------------------------------         
      {\Large\@addspaces{\MakeUppercase{\hgb@ThesisName}}%
        \ifthenelse{\boolean{hgb@IsProposal}}
          {\space\space(\@addspaces{\MakeUppercase{\hgbDictionaryGet{proposal-name}{\hgb@TitleLanguage}}})}{}}
      % ---------------------------------
			\vskip 4mm%
			%
			{\large\hgbDictionaryGet{submitted-to}{\hgb@TitleLanguage}}
			\vskip 1mm 
			{\hgb@ProgramType}%
			\vskip 4mm%
			{\large\hgb@ProgramName}%
			\vskip 4mm%
      % -------------------
      {\large in \hgb@PlaceOfStudy}%
      % -------------------
			\vskip 16mm%
      {\large\hgb@GetMonthName{\hgb@TitleLanguage}{\hgb@SubmissionMonth} \hgb@SubmissionYear}%
		\end{center}%
		\vfil%
  \end{german}
\end{titlepage}%
}

%% Generation of logo ----------------------------------------

\newlength{\hgb@LogoHeight}
\setlength{\hgb@LogoHeight}{30mm}

\newcommand{\hgb@MakeLogo}[0]{%
\ifthenelse{\equal{\hgb@LogoFile}{}}%	check if \hgb@LogoFile is empty (not @unspecified)
	{\vspace*{\hgb@LogoHeight}}%			skip logo
	{\includegraphics[height=\hgb@LogoHeight]{\hgb@LogoFile}}%	insert logo
}

% Default Advisor Page ----------------------------------------

\hgbDictionarySet{advisorstitlesingle}{english}{Supervisor}
\hgbDictionarySet{advisorstitlesingle}{german}{Betreuung}

\hgbDictionarySet{advisorstitlemultiple}{english}{Supervisors}
\hgbDictionarySet{advisorstitlemultiple}{german}{Betreuung}


\newcommand{\hgb@MakeAdvisorPage}{%
	\newpage
	\thispagestyle{plain}
	\rule{0mm}{1mm}
	\vspace{90mm}
	\begin{center}
		\ifthenelse{\hgb@AdvisorCount < 1}%
			{\color{red}No advisor(s) specified!}{}%
		%
		\ifthenelse{\hgb@AdvisorCount = 1}%
			{	\hgb@getAdvisorRole{1}: %\hgbDictionaryGet{advisorstitlesingle}{\hgb@TitleLanguage}:%
				\par\vspace{6mm}%
				\large\sffamily\hgb@getAdvisorName{1}%
			}{}%
		%
		\ifthenelse{\hgb@AdvisorCount > 1}%
			{	\hgbDictionaryGet{advisorstitlemultiple}{\hgb@TitleLanguage}:%
				\par\vspace{6mm}%
				\large\sffamily\@makeAdvisorTable% defined below
			}{}%
	\end{center}
}

\newcommand{\@makeAdvisorTable}{%
  \newcounter{C}%
	\renewcommand{\arraystretch}{1.25}%
	\setlength{\tabcolsep}{0.4em}%
  \begin{tabular}{ll}%
    \forloop{C}{1}{\not{\value{C} > \hgb@AdvisorCount}}{%   see 'forloop' package
      \hgb@getAdvisorRole{\theC}: & \hgb@getAdvisorName{\theC}%
      \ifthenelse{\value{C} < \hgb@AdvisorCount}{\\}{}% avoid extra \\ in last line!
    }%
  \end{tabular}%
}

